{% extends "Admin/layout.njk" %}
{% block content %}
<div class="global">
<div class="recipes">
    <div class="recipe_title">
        <p>Gerenciar receitas</p>
         <div class="button_create">
         <button type="submit"><a href="/admin/Receitas/criar">Criar Receita</a></button>
    </div>
    </div>
    <div class="recipe_cards">
       {% for recipe in recipes %}
           <div class="card" id="{{recipe.id}}">
               <div class="card_image">
                   <img src="{{recipe.image}}" alt="{{recipe.id}}">
               </div>
               <div class="card_info">
                   <p>{{recipe.title}}</p>
                   <p>{{recipe.description}}</p>
                   <a href="/admin/Receitas/{{recipe.id}}">Visualizar</a>
               </div>
           </div>
       {% endfor %}
    </div>
</div>
</div>
{% endblock %}